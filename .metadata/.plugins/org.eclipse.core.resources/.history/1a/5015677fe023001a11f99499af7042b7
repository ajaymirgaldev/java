 * 
 */
package core;

import java.util.Scanner;

/**
 * @author ajay.mirgal
 *
 */
public class Car {

	private String carColor;
	
	//
	Scanner scanner = new Scanner(System.in);
	
	//Class parameterized constructor//
	Car(String color){
		
		//Set car color//
		this.carColor = color;
	}
	
	//Setter
	public void setCarDetails(String color){
		//user input for setting car color//
		carColor = scanner.next();
		
		//calling set car details method //
		car.setCarDetails("Golden");
		
		//
		carColor = color;
	}
	
	//Getter
	public void getCarDetails(){
		System.out.print("Your Car Details as follows: "+carColor);
	}
	
	/**
	 * @param args
	 */
	public static void main(String[] args) {
		
		//Instantiating Car class //
		Car car = new Car("Silver");
		
		//calling get car details method //
		car.getCarDetails();
		
	}

}
